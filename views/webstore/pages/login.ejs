<html lang="en">
<head>

    <% include ../partials/head %>
</head>
<body>

<div align="center">
    <h2>notBuycraft</h2>
</div>

<br>

<div class="container content-container site-content">
    <div class="row center well">
        <div class="col-md-12">
            <% include ../partials/navbar %>
            <% if(typeof error != 'undefined'){ %>
                <br>
                <div class="alert alert-dismissible alert-danger">
                    <strong>Error!</strong> <%= error.message %>
                </div>
            <% } %>
            <hr>
            <div align="center"><h4>Enter Username</h4></div>
            <div class="col-md-6 col-sm-offset-3">
                <form method="post" action="/login/<%= redirect_id %>">
                    <div class="username">
                        <div class="input-group">
                            <input type="text" name="username" class="form-control input-lg form-control-lg">
                            <div class="input-group-append input-group-btn">
                                <button class="btn btn-success btn-lg" type="submit">Continue<i
                                            class="fa fa-chevron-right ml-2" style="margin-left:10px;"></i></button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
</body>
</html>